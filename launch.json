{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug sftp-daemon",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}", // 指向当前工作目录
            "env": {
                "RCLONE_CONFIG": "./app.conf" // 设置环境变量，指向配置文件
            },
            "args": [], // 如果需要为程序传递参数，可以在此处添加
            "cwd": "${workspaceFolder}" // 设置工作目录为项目路径
        }
    ]
}
